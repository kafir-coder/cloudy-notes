{
	"name": "cloudy-notes",
	"version": "1.0.0",
	"description": "A doomy project to share notes in realtime",
	"main": "index.js",
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"scripts": {
		"test": "jest --passWithNoTests --runInBand --no-cache",
		"test:unit": "npm test -- --watch -c jest-unit-config.js",
		"test:integration": "npm test -- --watch -c jest-integration-config.js",
		"test:staged": "npm test -- --findRelatedTests",
		"test:ci": "npm test -- --coverage",
		"test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
		"build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
		"dev": "nodemon",
		"build": "rimraf build && tsc -p tsconfig-build.json",
		"start": "node build/index.js",
		"lint": "eslint . --ext .ts",
		"lint-and-fix": "eslint . --ext .ts --fix",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kafir-coder/cloudy-notes.git"
	},
	"keywords": [
		"notes",
		"realtime",
		"shared"
	],
	"author": "Caio Tony",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kafir-coder/cloudy-notes/issues"
	},
	"homepage": "https://github.com/kafir-coder/cloudy-notes#readme",
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.4",
		"@babel/preset-typescript": "^7.15.0",
		"@types/jest": "^27.0.1",
		"@types/node": "^16.7.13",
		"@typescript-eslint/eslint-plugin": "^4.31.0",
		"@typescript-eslint/parser": "^4.31.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^7.0.2",
		"jest": "^27.1.0",
		"lint-staged": "^11.1.2",
		"nodemon": "^2.0.12",
		"prettier": "2.3.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2"
	}
}
